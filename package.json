{
  "name": "scentmatch",
  "version": "0.1.0",
  "description": "AI-powered fragrance discovery platform",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:strict": "eslint . --ext .ts,.tsx --max-warnings 5",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "quality": "npm run type-check && npm run lint:strict && npm run format:check",
    "quality:fix": "npm run type-check && npm run lint:fix && npm run format",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run --reporter=verbose",
    "test:integration": "vitest run tests/integration",
    "test:a11y": "vitest run tests/accessibility",
    "test:performance": "vitest run tests/performance",
    "test:ci": "vitest run --coverage --reporter=junit --outputFile=test-results.xml",
    "test:coverage:threshold": "vitest --coverage --coverage.thresholds.lines=80 --coverage.thresholds.functions=75 --coverage.thresholds.branches=70",
    "lighthouse:mobile": "node tests/performance/lighthouse-mobile.js",
    "validate:setup": "vitest run tests/setup-validation",
    "validate:supabase": "tsx scripts/validate-supabase.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 5",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix --max-warnings 5",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.45.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.454.0",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "autoprefixer": "^10.4.0",
    "axe-core": "^4.8.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "happy-dom": "^12.0.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.0",
    "lighthouse": "^11.0.0",
    "lint-staged": "^16.1.5",
    "playwright": "^1.40.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "tailwindcss": "^4.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0",
    "web-vitals": "^3.5.0"
  },
  "keywords": [
    "fragrance",
    "ai",
    "recommendations",
    "nextjs",
    "supabase"
  ],
  "author": "ScentMatch Team",
  "license": "MIT"
}
