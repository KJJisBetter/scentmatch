{
  "environment": "production",
  "description": "Production environment configuration with conservative settings and comprehensive monitoring",
  
  "monitoring": {
    "enabled": true,
    "schedule": {
      "day_of_week": 0,
      "hour": 2,
      "minute": 0,
      "timezone": "UTC",
      "description": "Weekly on Sundays at 2:00 AM UTC (low traffic time)"
    }
  },
  
  "quality_thresholds": {
    "rating_threshold": 4.0,
    "review_count_threshold": 500,
    "min_release_year": 2020,
    "max_new_fragrances_per_run": 20,
    "strict_validation": true,
    "description": "Strict quality gates for production data integrity"
  },
  
  "scraping": {
    "delay_seconds": 3.0,
    "max_concurrent_requests": 1,
    "timeout_seconds": 30,
    "max_retries": 5,
    "exponential_backoff": true,
    "respect_rate_limits": true,
    "conservative_headers": true,
    "description": "Conservative scraping to maintain good relationships with data sources"
  },
  
  "notifications": {
    "enabled": true,
    "console_notifications": false,
    "email_notifications": true,
    "slack_notifications": false,
    "notification_priority": "all",
    "immediate_alerts": [
      "critical_errors",
      "system_health_critical",
      "database_connection_lost"
    ],
    "description": "Comprehensive notifications for production monitoring"
  },
  
  "database": {
    "use_connection_pooling": true,
    "pool_size": 10,
    "max_overflow": 5,
    "batch_size": 100,
    "timeout_seconds": 60,
    "retry_attempts": 5,
    "transaction_safety": "strict",
    "backup_before_import": true,
    "description": "Production-grade database configuration with safety measures"
  },
  
  "logging": {
    "level": "INFO",
    "console_output": false,
    "file_output": true,
    "detailed_tracing": false,
    "performance_profiling": true,
    "structured_logging": true,
    "log_aggregation": true,
    "retention_days": 90,
    "description": "Production logging with aggregation and long retention"
  },
  
  "maintenance": {
    "enabled": true,
    "embedding_timeout_minutes": 15,
    "full_maintenance_cycle": true,
    "cleanup_frequency": "weekly",
    "performance_optimization": true,
    "monitoring_maintenance_windows": true,
    "description": "Comprehensive maintenance for production stability"
  },
  
  "security": {
    "encrypt_config_files": false,
    "audit_configuration_changes": true,
    "require_authentication": true,
    "restrict_manual_overrides": true,
    "api_key_validation": true,
    "description": "Production security measures"
  },
  
  "performance": {
    "max_execution_time_minutes": 120,
    "performance_alert_threshold_minutes": 60,
    "system_health_threshold_percent": 85,
    "memory_limit_mb": 1024,
    "cpu_usage_alert_percent": 80,
    "description": "Production performance monitoring and limits"
  }
}