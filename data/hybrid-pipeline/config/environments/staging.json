{
  "environment": "staging", 
  "description": "Staging environment configuration balancing production-like behavior with testing needs",
  
  "monitoring": {
    "enabled": true,
    "schedule": {
      "day_of_week": 1,
      "hour": 3,
      "minute": 0,
      "timezone": "UTC", 
      "description": "Weekly on Mondays at 3:00 AM UTC (offset from production)"
    }
  },
  
  "quality_thresholds": {
    "rating_threshold": 3.8,
    "review_count_threshold": 300,
    "min_release_year": 2018,
    "max_new_fragrances_per_run": 15,
    "description": "Slightly relaxed thresholds for staging validation"
  },
  
  "scraping": {
    "delay_seconds": 2.0,
    "max_concurrent_requests": 1,
    "timeout_seconds": 25,
    "max_retries": 3,
    "exponential_backoff": true,
    "respect_rate_limits": true,
    "description": "Production-like scraping with moderate settings"
  },
  
  "notifications": {
    "enabled": true,
    "console_notifications": true,
    "email_notifications": true,
    "notification_priority": "important",
    "staging_email_prefix": "[STAGING]",
    "description": "Full notifications with staging prefix for testing"
  },
  
  "database": {
    "use_connection_pooling": true,
    "pool_size": 5,
    "max_overflow": 3,
    "batch_size": 50,
    "timeout_seconds": 45,
    "retry_attempts": 3,
    "transaction_safety": "normal",
    "backup_before_import": false,
    "description": "Staging database configuration for testing"
  },
  
  "logging": {
    "level": "DEBUG",
    "console_output": true,
    "file_output": true,
    "detailed_tracing": true,
    "performance_profiling": true,
    "structured_logging": true,
    "retention_days": 30,
    "description": "Detailed logging for staging validation"
  },
  
  "maintenance": {
    "enabled": true,
    "embedding_timeout_minutes": 8,
    "full_maintenance_cycle": false,
    "cleanup_frequency": "daily",
    "performance_optimization": false,
    "description": "Moderate maintenance for staging environment"
  },
  
  "testing": {
    "enable_test_mode": true,
    "mock_external_apis": false,
    "validate_against_production": true,
    "performance_benchmarking": true,
    "load_testing": false,
    "description": "Staging-specific testing features"
  },
  
  "data_validation": {
    "strict_schema_validation": true,
    "cross_reference_production": false,
    "sample_data_verification": true,
    "quality_assurance_checks": true,
    "description": "Comprehensive data validation for staging"
  }
}