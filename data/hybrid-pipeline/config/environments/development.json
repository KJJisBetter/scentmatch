{
  "environment": "development",
  "description": "Development environment configuration with faster cycles and debug logging",
  
  "monitoring": {
    "enabled": true,
    "schedule": {
      "day_of_week": "*",
      "hour": "*", 
      "minute": "*/30",
      "timezone": "UTC",
      "description": "Every 30 minutes for development testing"
    }
  },
  
  "quality_thresholds": {
    "rating_threshold": 3.5,
    "review_count_threshold": 100,
    "max_new_fragrances_per_run": 5,
    "description": "Relaxed thresholds for development testing"
  },
  
  "scraping": {
    "delay_seconds": 0.5,
    "max_concurrent_requests": 1,
    "timeout_seconds": 15,
    "max_retries": 2,
    "respect_rate_limits": true,
    "description": "Faster scraping for development with safety limits"
  },
  
  "notifications": {
    "enabled": false,
    "console_notifications": true,
    "email_notifications": false,
    "description": "Console-only notifications in development"
  },
  
  "database": {
    "use_connection_pooling": false,
    "batch_size": 10,
    "timeout_seconds": 30,
    "retry_attempts": 2,
    "description": "Simplified database configuration for development"
  },
  
  "logging": {
    "level": "DEBUG",
    "console_output": true,
    "file_output": true,
    "detailed_tracing": true,
    "performance_profiling": true,
    "description": "Verbose logging for development debugging"
  },
  
  "maintenance": {
    "enabled": true,
    "embedding_timeout_minutes": 5,
    "skip_heavy_maintenance": true,
    "cleanup_frequency": "daily",
    "description": "Light maintenance suitable for development"
  }
}