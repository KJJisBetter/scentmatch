{
  "monitoring": {
    "enabled": true,
    "description": "Main monitoring system configuration for hybrid pipeline",
    "schedule": {
      "day_of_week": 0,
      "hour": 2,
      "minute": 0,
      "timezone": "UTC",
      "description": "Run weekly on Sundays at 2:00 AM UTC"
    }
  },
  "quality_thresholds": {
    "rating_threshold": 4.0,
    "review_count_threshold": 500,
    "min_release_year": 2020,
    "max_new_fragrances_per_run": 20,
    "description": "Quality gates for fragrance inclusion"
  },
  "performance": {
    "max_execution_time_minutes": 120,
    "performance_alert_threshold_minutes": 90,
    "system_health_threshold_percent": 80,
    "batch_size": 100,
    "database_timeout_seconds": 60,
    "description": "Performance and timeout configurations"
  },
  "notifications": {
    "enabled": true,
    "email_notifications": true,
    "notification_triggers": [
      "new_fragrances_imported",
      "errors_encountered", 
      "performance_issues",
      "system_health_low",
      "maintenance_completed"
    ],
    "description": "Notification system configuration"
  },
  "database_maintenance": {
    "enabled": true,
    "embedding_generation": {
      "enabled": true,
      "timeout_minutes": 10,
      "check_interval_seconds": 30
    },
    "cache_cleanup": {
      "enabled": true,
      "expire_threshold_days": 30,
      "cleanup_interval_hours": 24
    },
    "popularity_updates": {
      "enabled": true,
      "update_interval_days": 7,
      "recalculate_on_new_data": true
    },
    "database_optimization": {
      "enabled": true,
      "vacuum_threshold_days": 7,
      "analyze_after_import": true,
      "reindex_interval_days": 30
    },
    "description": "Automated database maintenance configuration"
  },
  "data_sources": {
    "fragrantica_trending": {
      "enabled": true,
      "urls": [
        "https://www.fragrantica.com/trending/",
        "https://www.fragrantica.com/new_releases/"
      ],
      "check_interval_hours": 168,
      "description": "Weekly trending fragrance monitoring"
    },
    "social_media_monitoring": {
      "enabled": false,
      "platforms": ["tiktok", "youtube", "instagram"],
      "keywords": ["new fragrance", "perfume review", "scent of the day"],
      "description": "Social media trend monitoring (future enhancement)"
    }
  },
  "error_handling": {
    "max_retries": 3,
    "retry_delay_seconds": 5,
    "exponential_backoff": true,
    "fallback_strategies": [
      "skip_problematic_sources",
      "use_cached_data", 
      "notify_administrators",
      "graceful_degradation"
    ],
    "critical_error_threshold": 5,
    "description": "Error handling and recovery configuration"
  },
  "logging": {
    "level": "INFO",
    "file_rotation": {
      "enabled": true,
      "max_file_size_mb": 50,
      "backup_count": 10,
      "rotate_daily": true
    },
    "log_retention_days": 90,
    "performance_logging": true,
    "detailed_error_traces": true,
    "description": "Comprehensive logging configuration"
  },
  "security": {
    "api_key_rotation_days": 90,
    "encrypt_sensitive_logs": false,
    "audit_trail": true,
    "access_control": {
      "restrict_config_access": true,
      "require_service_role": true
    },
    "description": "Security and access control settings"
  }
}