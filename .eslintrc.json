{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "off",
    "no-debugger": "error",
    "eqeqeq": ["error", "always"],
    "react/no-unescaped-entities": "off"
  },
  "overrides": [
    {
      "files": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
      ],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["lib/supabase-validation.ts", "scripts/**/*.ts"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": [
        "lib/ai/real-time-recommendations.ts",
        "components/recommendations/recommendations-system.tsx"
      ],
      "rules": {
        "prefer-const": "warn",
        "react-hooks/exhaustive-deps": "warn"
      }
    }
  ]
}
