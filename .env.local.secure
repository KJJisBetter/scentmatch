# PRODUCTION ENVIRONMENT VARIABLES
# This file should be configured on your production server ONLY
# Never commit this file to version control

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=your_production_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key

# AI Services (Required for recommendations)
OPENAI_API_KEY=your_production_openai_key
VOYAGE_AI_API_KEY=your_production_voyage_key
VOYAGE_API_KEY=your_production_voyage_key

# Database (Only if direct connection needed)
DATABASE_PASSWORD=your_production_db_password

# Rate Limiting (Production Redis - Optional)
UPSTASH_REDIS_REST_URL=your_redis_url
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# Security Configuration
NODE_ENV=production
VERCEL_ENV=production

# Monitoring (Optional)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
SENTRY_AUTH_TOKEN=your_sentry_token